<% layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

<body>
    <div class="d-flex flex-wrap container justify-content-evenly mt-5">
    <% for(let data of list){%>
        <a href="/listing/<%= data.id %>" class="f-card-show-link mb-3">
        <div class="card cards" style="width: 23rem;">
            <img src="<%= data.image  %>" class="card-img-top" alt="<%= data.title %>">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <h5 class="card-title"><%= data.title  %></h5>
              <p class="card-text">&#8360;<%= data.price.toLocaleString("en-IN") %> /night</p>
            </div>
          </div>
        </a>
    <% } %>
</div>
</body>