<% layout("layouts/boilerplate") -%>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
/>
<body>
  <div class="row offset-2">
    <div class="card border-0 mt-5 col-8 d-flex flex-column flex-wrap">
      <h3>details of <%= list.title %></h3>
      <img src="<%=list.image%>" alt="<%=list.title%>" class="card-img-top" />
      <div class="card-body">
        <p><%=list.title%></p>
        <p><%=list.description%></p>
        <p>&#8360;<%= list.price.toLocaleString("en-IN") %></p>
        <p><%= list.location %></p>
        <p><%= list.country %></p>
      </div>
      <div class="row mb-5 col-md-8">
        <a href="/listing/<%= list.id %>/edit" class="btn btn-danger col-2"
          >edit</a
        >
        <form
          action="/listing/<%= list.id %>?_method=DELETE"
          method="post"
          class="col-3"
        >
          <button class="btn btn-dark">delete</button>
        </form>
      </div>

      <div class="row mt-1">
        <form
          action="/listing/<%= list.id %>/review"
          method="post"
          class="mt-3 needs-validation"
          novalidate
        >
          <div>
            <label class="form-label" id="rev">rate star</label>
            <input
              id="rev"
              type="range"
              name="rating"
              max="5"
              min="1"
              class="form-range"
              required
            />
          </div>
          <div>
            <label class="form-label" for="cmt">comments</label>
            <textarea
              name="comment"
              id="cmt"
              cols="40"
              rows="5"
              class="form-control"
              required
            ></textarea>
          </div>

          <button type="submit" class="btn btn-secondary mt-2">submit</button>
        </form>
      </div>
      <div class="container mb-3 mt-3">
        <% if(list.reviews.length != 0){ %>
        <h3>reviews</h3>
        <% for(let review of list.reviews){ %>
        <div class="row col card mt-3 d-flex flex-row flex-wrap">
          <div class="card-body p-3">
            <h4 class="card-title">tushar rayamajhi</h4>
            <p class="card-text"><%= review.rating %> Star</p>
            <p class="card-text"><%= review.comment %></p>
            <form action="/listing/<%= list.id %>/review/<%= review.id%>?_method=DELETE" method="post">
              <button class="btn btn-danger"><i class="fa-solid fa-trash"> Delete</i></button>
            </form>
          </div>
        </div>
        <% } %> <% }else{ %>
        <h3>no reviews</h3>
        <% } %>
      </div>
    </div>
  </div>
</body>
<script src="/js/formvalidate.js"></script>
